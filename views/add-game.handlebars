<div class="container" id="additions">
    <div><h3>Add a Game</h3></div>
    <div></br></div>
    <div id="new-game" aria-labelledby="game" >
        <form action="/newgame" method="post">
          <div class="form-group">
            <label for="game-title">Title* (Required)</label>
            <input type="text" size="50" class="form-control" name="game-title" id="game-title" placeholder="Enter title" required>
          </div>
		  <div class="form-row">
			<div class="form-group col-md-6">
			  <label for="game-publisher">Publisher</label>
        <input type="text" size="50" class="form-control" name="game-publisher" id="game-publisher" placeholder="Enter publisher">
		    </div>
		  </div>
      <div class="form-row">
			<div class="form-group col-md-3">
            	<label for="game-year">Year Released</label>
            	<input type="number" size="6" class="form-control" name="game-year" id="game-year" placeholder="Enter year released">
			</div>
			<div class="form-group col-md-3">
            	<label for="game-min">Min. # of Players</label>
            	<input type="number" size="2" class="form-control" name="game-min" id="game-min" placeholder="Minimum # of players">
			</div>

			<div class="form-group col-md-3">
            	<label for="game-max">Max. # of Players</label>
            	<input type="number" size="3" class="form-control" name="game-max" id="game-max" placeholder="Maximum # of players">
			</div>
			<div class="form-group col-md-3">
            	<label for="game-age">Min. Age</label>
            	<input type="number" size="2" class="form-control" name="game-age" id="game-age" placeholder="Minimum age of players">
			</div>
          </div>
          <div class="form-row">
          <div class="form-group col-md-3">
            <label for="game-time">Length of Gameplay</label>
            <input type="number" size="3" class="form-control" name="game-time" id="game-time" placeholder="Play time in minutes">
          </div>
          <div class="form-group col-md-3">
            <label for="game-bgg">BoardGameGeek ID</label>
            <input type="text" size="6" class="form-control" name="game-bgg" id="game-bgg" placeholder="BoardGameGeek.com id">
          </div>
          <div class="form-group col-md-3">
            <label for="game-rating">Rating</label>
            <input type="number" size="3" step="0.1" class="form-control" name="game-rating" id="game-rating" min="1" max="10" placeholder="Rating, 0.0 - 10.0">
          </div>
			</div>
          <button type="submit" class="btn btn-primary">Add Game</button>
        </form>
  </div>
</div>
