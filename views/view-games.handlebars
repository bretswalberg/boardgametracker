<div>
<h3>My Games</h3>
</div>
<div class="container-fluid" align="right">
	<button onclick="window.location.href='/newgame'" class="btn btn-primary">Add Game</button>
	<button onclick="window.location.href='/importgame'" class="btn btn-primary">Import Game</button>
	</br></br>
</div>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Year</th>
      <th scope="col">Publisher</th>
      <th scope="col">Players</th>
      <th scope="col">Ages</th>
      <th scope="col">Length</th>
      <th scope="col">Rating</th>
      <th scope="col">BGG ID</th>
      <th scope="col"># Played</th>
      <th scope="col">Manage</th>
    </tr>
  </thead>
  <tbody>

{{#each data}}
    <tr>
		<td><a href="/viewgame?gid={{this.id}}">{{this.title}}</a></td>
		<td>{{this.year}}</td>
		<td>{{this.publisher}}</td>
		<td>
		  {{#if this.minplayers}}
			{{this.minplayers}} - {{this.maxplayers}}
		  {{/if}}
		</td>
		<td>
		  {{#if this.minage}}
			{{this.minage}}+
		  {{/if}}
		</td>
		<td>
		  {{#if this.playtime }}
			{{this.playtime}} minutes
		  {{/if}}
		</td>
		<td>{{this.rating}}</td>
		<td>
		{{#if this.bggid}}
			<a href="https://boardgamegeek.com/boardgame/{{this.bggid}}" target="bgg">BGG Link</a>
		{{/if}}
		</td>
		<td align="center">{{this.timesplayed}}</td>
		<td>
			<a href="/updategame?id={{this.id}}">Edit</a>
			&nbsp;&nbsp;
			<a href="/deletegame?id={{this.id}}" onclick="return confirm('Are you sure you want to delete {{this.title}}?')">Delete</a>
		</td>
	</tr>
{{/each}}

  </tbody>
</table>

{{context.results}}
