        <div class="form-group">
          <label for="img-url">URL* (Required)</label>
          <input type="url" class="form-control" name="img-url" id="img-url" placeholder="Enter photo URL here" required>
        </div>
        <div class="form-group">
          <label for="img-desc">Description</label>
          <input type="text" class="form-control" name="img-desc" id="img-desc" placeholder="Enter photo description here">
        </div>
        <button type="submit" class="btn btn-primary">Add Photo</button>
      </form>
    </div>
  </div>
</div>
</div>
